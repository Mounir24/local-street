            <!-- ORDER AREA AREA -->
            <div class="container-fluid order__area">
                <div class="row w-100 mx-auto">
                    <div class="col-md-6 col-sm-12 col-lg-6 col-xs-12 center d-flex justify-content-center align-items-center flex-column">
                        <div class="product_preview" data-tilt>
                            <div class="img__holder">
                                <img src="/Assets/Imgs/Module 1-2-3 Verso.png" alt="Hoodie - Loco Street" class="img-fluid img__prev">
                            </div>
                            <h2 class="card__label">wydad logo recto hoddie</h2>
                        </div>
                        <!-- List Product Preview -->
                        <div class="products__controllers">
                            <ul class="products-list">
                                <il class="product-preview">
                                    <img src="/Assets/Imgs/Module (1).png" alt="Product 1" class="img-fluid"
                                        onclick="swipImg('/Assets/Imgs/Module (1).png')">
                                </il>
                                <il class="product-preview">
                                    <img src="/Assets/Imgs/Module (2).png" alt="Product 2" class="img-fluid"
                                        onclick="swipImg('/Assets/Imgs/Module (2).png')">
                                </il>
                                <il class="product-preview">
                                    <img src="/Assets/Imgs/Module 1-2-3 Verso.png" alt="Product 3" class="img-fluid"
                                        onclick="swipImg('/Assets/Imgs/Module 1-2-3 Verso.png')">
                                </il>
                                <li class="product-preview" id="one">
                                    <img src="/Assets/Imgs/Module Sans verso.png" alt="Product 4" class="img-fluid"
                                        onclick="swipImg('/Assets/Imgs/Module Sans verso.png')">
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-lg-6 col-xs-12">
                        <div class="form__wrapper">
                            <form action="/api/new-order" method="POST" class="mt-3 p-4" name="google-sheet" id="form_order">
                                <!-- PRODUCT TYPE -->
                                <div class="form-row">
                                    <label for="productsType">Product Type:</label>
                                    <select class="custom-select  select-dropdown" name="productType" id="productsType">
                                <option selected>Product Type:</option>
                                <option value="wydad logo verso hoddie">wydad logo verso hoddie</option>
                                <option value="wydad the king verso hoddie">wydad the king verso hoddie</option>
                                <option value="wydad logo recto hoddie">wydad logo recto hoddie</option>
                                <option value="on/off recto hoddie">on/off recto hoddie</option>
                                </select>
                                </div>
                                <!-- QUANITITY-->
                                <div class="form-row w-100 mx-auto">
                                    <div class="col-md-12 w-50 mx-auto">
                                        <label for="quantity">Quantity:</label>
                                        <input type="number" class="form-control" name="quantity" id="quantity" placeholder="Quantity Ex: 5" required>
                                    </div>
                                </div>
                                <!-- SIZE -->
                                <div class="form-row mb-3">
                                    <label for="size">Size:</label>
                                    <select class="custom-select  select-dropdown" name="productSize" id="size">
                                        <option selected>Select Size:</option>
                                        <option value="">S</option>
                                        <option value="">L</option>
                                        <option value="">M</option>
                                        <option value="">X</option>
                                        <option value="">XL</option>
                                        <option value="">XLL</option>
                                        <option value="">XLLL</option>
                                    </select>
                                </div>
                                <!-- ROW 1 -->
                                <div class="form-row mt-3">
                                    <div class="col-md-6">
                                        <label for="firstName">First Name:</label>
                                        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Your First Name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName">Last Name:</label>
                                        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Your Last Name" required>
                                    </div>
                                </div>
                                <!-- ROW 2 -->
                                <div class="form-group mt-3">
                                    <label for="phoneNumber">Phone Number:</label>
                                    <input type="phone" class="form-control" name="phone" id="phoneNumber" placeholder="You Phone Number" required>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="Address">Address:</label>
                                    <input type="text" class="form-control" name="address" id="Address" placeholder="Your Address" required>
                                </div>
                                <div class="form-group mt-3">
                                    <label for="email">E-mail:</label>
                                    <input type="email" class="form-control" name="email" id="email" placeholder="Your E-mail Address" required>
                                </div>
                                <button type="submit" class="btn order-btn">
                                    Order Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- SVG WAVE -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 250">
